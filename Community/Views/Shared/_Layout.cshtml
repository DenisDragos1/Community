<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Community</title>
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
  
    <script src="~/Scripts/modernizr-2.8.3.js"></script>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Community", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    @{
                        if (Session["ID"] == null)
                        {
                            <li>@Html.ActionLink("Conectare", "Login", "Register")</li>
                            <li>@Html.ActionLink("Inregistrare", "Index", "Register")</li>
                        }
                        else
                        {

                            <li><a>@HttpContext.Current.Session["FirstName"]</a></li>
                            <li>@Html.ActionLink("Deconectare", "LogOut", "Login")</li>
                        }

                    }

                    <li>@Html.ActionLink("Despre", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>


                    @{ if (Session["ID"] == null)
                        {
                            <li>@Html.ActionLink("Anunturi", "Login", "Register")</li>
                        }
                        else
                        {
                            <li>@Html.ActionLink("Anunturi", "Index", "Requests")</li>
                        }

                    }
                    <li>@Html.ActionLink("Acasa", "Index", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <style>

        body {
            margin: 0px;
            border: 0px;
            background-size: cover;
        }

        .nav ul {
            float: right;
            list-style: none;
        }

            .nav ul li {
                float: right;
                padding: 15px;
                list-style: none;
            }

                .nav ul li a {
                    text-decoration: none;
                    color: #9d9d9d;
                    font-size: 18px;
                    font-family: Verdana;
                    list-style: none;
                }

                    .nav ul li a:hover {
                        color: white;
                    }


        .content1 {
            width: 100%;
            height: 400px;
        }

        footer {
            width: 100%;
            height: 40px;
        }

            footer p {
                color: black;
                margin-left: 50%;
            }

        .fas fa-user-circle {
            width: 40px;
            height: 40px;
        }

        li.user {
            color: #9d9d9d;
            font-size: 18px;
        }
    </style>

    <div class="body-content">

        @RenderBody()
        
        <footer>
                <p>&copy; @DateTime.Now.Year - Community</p>
            </footer>
        
        </div>    
    @*<style>
            .body-content {
                background-size: cover;
                position: center;
            }
        </style>*@
 

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>